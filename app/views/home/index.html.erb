<form action=/ method="get">
  <input id = @search  name= search placeholder= 'Type something here' class= 'form-control' />
</form>

<div class='container-fluid'>
  <div class="row justify-content-md-center">
    <% @products.each do |pr| %>
        <div class="grid-item col-6 col-md-4 col-lg-3 mt-4 mb-3"> 
        <% if pr.primary_image.attached? %>
          <%= image_tag(pr.primary_image, height: '200px', width: '200px', class: 'rounded mx-auto d-block') %>
        <% end %>
        <div class="card-body text-center mx-auto">
          <div class='cvp'>
            <h5 class="card-title font-weight-bold"> <%= pr.title %> </h5>
            <p class="card-text">$299(PlaceHolder)</p> 
            <%= link_to 'View details', admins_product_path(pr), class: "btn details px-auto" %>
            <br /> 
            <%= link_to 'Buy now!', orders_new_path(:id => pr.id), class: "btn cart px-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @products %>
</div>

